@{
    ViewData["Title"] = "Home Page";
}
@model Product
<div class="d-flex justify-content-evenly">
    <div class="card shadow col-5 p-2 d-flex">
        <div class="card-header h2 ">New Product</div>
        <div class="card-body ">
            <form asp-action="NewProduct" asp-controller="Home" method="post">
                <div class="form-group mb-3 ">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 ">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <button class="btn btn-primary w-100"> New Product</button>
            </form>
        </div>

    </div>
    @await Html.PartialAsync("_AllProduct")
</div>